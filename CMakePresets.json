{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "vcpkg-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$GITHUB_WORKSPACE/vcpkg/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "windows-base",
            "hidden": true,
            "inherits": "vcpkg-base",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo",
                "CMAKE_CROSS_CONFIGS": "all",
                "CMAKE_DEFAULT_BUILD_TYPE": "Debug",
                "CMAKE_DEFAULT_CONFIGS": "all",
                "VCPKG_TARGET_TRIPLET": "x64-windows-clang-static",
                "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/triplets"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "linux-base",
            "hidden": true,
            "inherits": "vcpkg-base",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang-20",
                "CMAKE_CXX_COMPILER": "clang++-20",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo",
                "CMAKE_CROSS_CONFIGS": "all",
                "CMAKE_DEFAULT_BUILD_TYPE": "Debug",
                "CMAKE_DEFAULT_CONFIGS": "all",
                "VCPKG_TARGET_TRIPLET": "x64-linux"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "win-amd64",
            "displayName": "Windows AMD64",
            "description": "Multi-config build for Windows AMD64 using Clang",
            "inherits": "windows-base"
        },
        {
            "name": "linux-amd64",
            "displayName": "Linux AMD64",
            "description": "Multi-config build for Linux AMD64 using Clang 20",
            "inherits": "linux-base"
        }
    ],
    "buildPresets": [
        {
            "name": "win-amd64-debug",
            "configurePreset": "win-amd64",
            "configuration": "Debug"
        },
        {
            "name": "win-amd64-release",
            "configurePreset": "win-amd64",
            "configuration": "Release"
        },
        {
            "name": "win-amd64-relwithdebinfo",
            "configurePreset": "win-amd64",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "linux-amd64-debug",
            "configurePreset": "linux-amd64",
            "configuration": "Debug"
        },
        {
            "name": "linux-amd64-release",
            "configurePreset": "linux-amd64",
            "configuration": "Release"
        },
        {
            "name": "linux-amd64-relwithdebinfo",
            "configurePreset": "linux-amd64",
            "configuration": "RelWithDebInfo"
        }
    ],
    "testPresets": [
        {
            "name": "win-amd64-debug",
            "configurePreset": "win-amd64",
            "configuration": "Debug"
        },
        {
            "name": "win-amd64-release",
            "configurePreset": "win-amd64",
            "configuration": "Release"
        },
        {
            "name": "win-amd64-relwithdebinfo",
            "configurePreset": "win-amd64",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "linux-amd64-debug",
            "configurePreset": "linux-amd64",
            "configuration": "Debug"
        },
        {
            "name": "linux-amd64-release",
            "configurePreset": "linux-amd64",
            "configuration": "Release"
        },
        {
            "name": "linux-amd64-relwithdebinfo",
            "configurePreset": "linux-amd64",
            "configuration": "RelWithDebInfo"
        }
    ]
}
